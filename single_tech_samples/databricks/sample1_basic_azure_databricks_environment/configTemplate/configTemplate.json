{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "DEPLOYMENT_PREFIX": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Primary location for resources"
      }
    },
    "tagValues": {
      "type": "object",
      "defaultValue": {}
    },
    "keyVaultUserOID": {
      "type": "string",
      "metadata": {
        "description": "Specifies the object ID of a user, service principal or security group in the Azure Active Directory tenant for the vault. The object ID must be unique for the list of access policies. Get it by using Get-AzADUser or Get-AzADServicePrincipal cmdlets."
      }
    },
    "utcValue": {
      "type": "string",
      "defaultValue": "[utcNow()]"
    }
  },
  "variables": {
    "scriptName": "createFileShare",
    "identityName": "scratch",
    "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
    "roleDefinitionName": "[guid(variables('identityName'), variables('roleDefinitionId'))]",
    "adbWorkspaceName": "[concat(parameters('DEPLOYMENT_PREFIX'),'adb01')]",
    "keyVaultName": "[concat(parameters('DEPLOYMENT_PREFIX'),'akv01')]",
    "storageAccountName": "[concat(parameters('DEPLOYMENT_PREFIX'),'asa01')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "name": "linkedTemplateADBWorkspace",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/Azure-Samples/modern-data-warehouse-dataops/single-tech/databricks/single_tech_samples/databricks/sample1_basic_azure_databricks_environment/databricks/workspace.template.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adbWorkspaceName": {
            "value": "[variables('adbWorkspaceName')]"
          },
          "adbWorkspaceLocation": {
            "value": "[parameters('location')]"
          },
          "adbWorkspaceSkuTier": {
            "value": "premium"
          },
          "tagValues": {
            "value": "[parameters('tagValues')]"
          },
          "disablePublicIp": {
            "value": false
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "name": "linkedTemplateKeyVault",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/Azure-Samples/modern-data-warehouse-dataops/single-tech/databricks_209-deploy-to-azure-batch/single_tech_samples/databricks/sample1_basic_azure_databricks_environment/keyvault/keyvault.template.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultName": {
            "value": "[variables('keyVaultName')]"
          },
          "keyVaultSkuTier": {
            "value": "Standard"
          },
          "keyVaultLocation": {
            "value": "[parameters('location')]"
          },
          "enabledForDeployment": {
            "value": false
          },
          "enabledForTemplateDeployment": {
            "value": false
          },
          "objectId": {
            "value": "[parameters('keyVaultUserOID')]"
          },
          "tagValues": {
            "value": "[parameters('tagValues')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "name": "linkedTemplateStorageAccount",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/Azure-Samples/modern-data-warehouse-dataops/single-tech/databricks_209-deploy-to-azure-batch/single_tech_samples/databricks/sample1_basic_azure_databricks_environment/storageaccount/storageaccount.template.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "storageAccountName": {
            "value": "[variables('storageAccountName')]"
          },
          "storageAccountSku": {
            "value": "Standard_LRS"
          },
          "storageAccountSkuTier": {
            "value": "Standard"
          },
          "storageAccountLocation": {
            "value": "[parameters('location')]"
          },
          "encryptionEnabled": {
            "value": true
          }
        }
      }
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "name": "[variables('identityName')]",
      "apiVersion": "2018-11-30",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'linkedTemplateADBWorkspace')]",
        "[resourceId('Microsoft.Resources/deployments', 'linkedTemplateKeyVault')]",
        "[resourceId('Microsoft.Resources/deployments', 'linkedTemplateStorageAccount')]"
      ]
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2020-04-01-preview",
      "name": "[variables('roleDefinitionName')]",
      "dependsOn": [
        "[variables('identityName')]"
      ],
      "properties": {
        "roleDefinitionId": "[variables('roleDefinitionId')]",
        "principalId": "[reference(variables('identityName')).principalId]",
        "scope": "/",
        "principalType": "ServicePrincipal"
      }
    },
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "[variables('scriptName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('roleDefinitionName')]"
      ],
      "kind": "AzureCLI",
      "identity": {
        "type": "userAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('identityName'))]": { /*ttk bug*/
          }
        }
      },
      "properties": {
        "azCliVersion": "2.15.0",
        "forceUpdateTag": "[parameters('utcValue')]",
        "timeout": "PT30M",
        "primaryScriptUri": "https://raw.githubusercontent.com/Azure-Samples/modern-data-warehouse-dataops/single-tech/databricks_209-deploy-to-azure-batch/single_tech_samples/databricks/sample1_basic_azure_databricks_environment/configTemplate/configScript.sh",
        "cleanupPreference": "OnSuccess", //update to 
        "retentionInterval": "PT1H",
        "environmentVariables": [
          {
            "name": "AZURE_RESOURCE_GROUP_NAME",
            "value": "[resourceGroup().name]"
          },
          {
            "name": "DEPLOYMENT_PREFIX",
            "value": "[parameters('DEPLOYMENT_PREFIX')]"
          },
          {
            "name": "DEPLOY_PRINCIPAL_ID",
            "value": "[reference(variables('identityName')).principalId]"
          }
        ]
      }
    }
  ],
  "outputs": {

  }
}
